@model TransportationAkademiPlus.Models.TblCategory

@{
    Layout = "~/Views/_AdminLayout/_AdminLayout.cshtml";
}

<form method="post">
    <label>Kategori ID</label>
    @Html.TextBoxFor(x => x.CategoryID, new { @class = "form-control" })
    <br />
    <label>Kategori Adı</label>
    @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
    <br />
    <button class="btn btn-success">Kategoriyi Güncelle</button>
</form>
@*Html Helper*@