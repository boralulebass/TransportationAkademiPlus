@model PagedList.IPagedList<TblCategory>
@using PagedList
@using PagedList.Mvc
@using TransportationAkademiPlus.Models
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_AdminLayout/_AdminLayout.cshtml";
}

<h2>Kategori Listesi</h2>
<link href="~/Content/PagedList.css" rel="stylesheet" />
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Kategori Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CategoryID</td>
            <td>@item.CategoryName</td>
            <td><a href="/Category/DeleteCategory/@item.CategoryID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Category/UpdateCategory/@item.CategoryID" class="btn btn-success">Güncelle</a></td>
            <td><a href="#" class="btn btn-warning">Detaylar</a></td>
        </tr>
    }
</table>
@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa }))
<a href="/Category/AddCategory/" class="btn btn-primary">Yeni Kategori Girişi</a>
